{{> header }}
{{> distributorHeader }}

<section class="ls section_padding_top_30 section_padding_bottom_30">
    <div class="container">
        <div class="row">
            <form class="sales_profile" id="sa_profile" role="form">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group validate-required" id="sales_name_field"> <label for="sa_name"
                            class="control-label">
                            <span class="grey">Name:</span>
                        </label> <input type="text" class="form-control dis_field" name="sa_name" id="sa_name"
                            placeholder="" value="{{name}}" disabled>
                    </div>
                    <div class="form-group validate-required" id="sales_mobile_field"> <label for="sa_pmobile"
                            class="control-label">
                            <span class="grey">Primary mobile:</span>
                        </label> <input type="text" class="form-control dis_field" name="sa_pmobile" id="sa_pmobile"
                            placeholder="" value="{{primaryMobile}}" disabled>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group" id="billing_company_field"> <label for="sa_email" class="control-label">
                            <span class="grey">E-mail</span>
                        </label> <input type="text" class="form-control dis_field" name="sa_email" id="sa_email"
                            placeholder="" value="{{email}}" disabled>
                    </div>
                    <div class="form-group validate-required" id="sales_smobile_field"> <label for="sa_smobile"
                            class="control-label">
                            <span class="grey">Secondary mobile:</span>
                        </label> <input type="text" class="form-control dis_field" name="sa_smobile" id="sa_smobile"
                            placeholder="" value="secondaryMobile" disabled>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group address-field validate-required" id="sales_address_fields"> <label
                            for="sales_address" class="control-label">
                            <span class="grey">Address:</span>
                        </label> <input type="text" class="form-control dis_field" name="sales_address"
                            id="sales_address" placeholder="" value="{{address}}" disabled>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group"> <label for="ui_city" class="control-label">
                            <span class="grey">City/Town:</span></label>
                        <select class="form-control dis_field" name="ui_city" id="ui_city" disabled>
                            <option value="{{city}}" selected="selected">{{city}}</option>
                        </select>
                    </div>
                    <div class="form-group"> <label for="sales_state" class="control-label">
                            <span class="grey">State/Province:</span></label>
                        <select class="form-control dis_field" name="sales_state" id="sales_state" disabled>
                            <option value="{{state}}" selected="selected">{{state}}</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group address-field validate-required validate-postcode"
                        id="billing_postcode_field"> <label for="billing_postcode" class="control-label">
                            <span class="grey">Postcode:</span>
                        </label> <input type="text" class="form-control dis_field" name="billing_postcode"
                            id="billing_postcode" placeholder="" value="{{pin}}" disabled>
                    </div>
                    <div class="form-group"> <label for="sales_country" class="control-label">
                            <span class="grey">Country:</span></label>
                        <select class="form-control dis_field" name="sales_country" id="sales_country" disabled>
                            <option value="{{country}}" selected="selected">{{country}}</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button type="button" id="dist_edit" class="theme_button wide_button color1 topmargin_40">Edit
                        Details</button>
                    <button type="submit" class="theme_button wide_button">Update Details</button>
                    <button type="button" data-toggle="modal" data-target="#myModal" id="sa_upass"
                        class="theme_button wide_button color2 topmargin_40 pull-right">Change password</button>
                </div>
            </form>
        </div>
        <div class="modal fade" id="myModal" role="dialog" style="z-index:99999">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Change Password</h4>
                    </div>
                    <div class="modal-body">
                        <div calss="container-fluid">
                            <form class="form-horizontal tpad" role="form" method="post" action=""
                                enctype="multipart/form-data">
                                <div class="form-group">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-8">
                                        <input type="password" name="ui_current_password" class="form-control" id="ui_current_password"
                                            placeholder="Current Password" autocomplete="off" required>
                                        <input type="password" name="ui_new_password" style="margin-top:15px;" class="form-control"
                                            id="ui_new_password" placeholder="New Password" autocomplete="off" required>
                                        <input type="password" name="ui_re_new_password" style="margin-top:15px;" class="form-control"
                                            id="ui_re_new_password" placeholder="Re-Enter New Password" autocomplete="off" required>
                                        <button type="button" style="margin-top:15px;" name="quick_apply"
                                            class="btn btn-primary pull-right">Change Password</button>
                                    </div>
                                </div>
                        </div>
                        </br></br>
                        <div class="modal-footer">
                            <div class="col-md-offset-1 col-md-6"></div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>
<script type="text/javascript">
    $(function () {
        const fields = $(".dis_field");
        fields.prop("disabled", true);

        $("#dist_edit").click(function () {
            {{!--console.log(fields.attr("disabled")); --}}
            if (fields.attr("disabled"))
                fields.attr("disabled", false);
            else
                fields.attr("disabled", true)
        });
    });
</script>

{{> footer-end }}